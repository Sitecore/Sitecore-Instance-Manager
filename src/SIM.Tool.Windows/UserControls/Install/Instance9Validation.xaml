<UserControl x:Class="SIM.Tool.Windows.UserControls.Install.Instance9Validation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIM.Tool.Windows.UserControls.Install"
             mc:Ignorable="d" 
             d:DesignHeight="258.311" d:DesignWidth="426.703"
             Name="ValidationResultsControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox Name="Validate" IsChecked="True" Grid.Row="0" >Perform installation parameters validation</CheckBox>
        <TextBlock Name="Caption" HorizontalAlignment="Left" Grid.Row="1"/>
        <DataGrid Grid.Row="2" Visibility="Hidden" IsEnabled="True" HorizontalAlignment="Left" Name="MessagesList" ItemsSource="{Binding}" 
                  Margin="10,10,0,0" VerticalAlignment="Top" Width="407" >
           
        </DataGrid>
    </Grid>
</UserControl>
